class Champ
    def initialize (name,hp,strength,defense,artfulness)
        @name = name
        @hp = hp
        @strength = strength
        @defense =defense
        @artfulness = artfulness
    end
    def its_alive()
        return @hp > 0
    end
    def death()
        @hp = 0
        puts @name,"Ha muerto"
    end
    def attack(e)
        damage = damage(e)
        e.hp = e.hp - damage
        puts @name, "ha realizado", damage, "puntos de hp a" , e.name
        
        if e.its_alive
            puts "hp restante de", e.name,"es:", e.hp
        if
            e.death
        end
    end
end
